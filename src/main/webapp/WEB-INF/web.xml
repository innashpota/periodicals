<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <display-name>Web Application "Periodicals"</display-name>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/periodicals</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>PeriodicalsController</servlet-name>
        <servlet-class>
            com.inna.shpota.periodicals.controller.PeriodicalsController
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/periodicals</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/periodicals/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/edit-periodicals</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PeriodicalsController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>PermissionsFilter</filter-name>
        <filter-class>
            com.inna.shpota.periodicals.filter.PermissionsFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PermissionsFilter</filter-name>
        <servlet-name>PeriodicalsController</servlet-name>
    </filter-mapping>
</web-app>